<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <% title = ((vars.title && `${vars.title} - `) || "") + "Router Management" %>
    <title> <%= title %> </title>
    <link rel="stylesheet" href="/libs/bootstrap-5.3.0/css/bootstrap.min.css" />
    <script src="/libs/jquery-3.6.3.min.js"></script>
  </head>

  <body style="background-color: #f5f5f5;">
    <div class="container text-center p-5">
      <h1 class="mb-3 pb-3"> <%= vars.content_title %> </h1>
      <hr />
      <% if (vars.show_menu) { %>
        <p>
          Menu:
          <a href="/">Home</a> |
          <a href="/devices">Online Devices</a> |
          <a href="/dhcp">DHCP</a> |
          <a href="/port-forwarding">Port Forwarding</a> |
          <a href="/logout">Logout</a>
        </p>
      <% } %>
      <% if (vars.error) { %>
        <div class="alert alert-danger text-start">
          <h2> Error </h2>
          <pre><%= vars.error %></pre>
        </div>
      <% } %>
      <div class="text-start">
        <%- marked(vars.md_to_render_begin || "") %>
